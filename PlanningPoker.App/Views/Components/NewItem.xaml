<?xml version="1.0" encoding="utf-8"?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="PlanningPoker.App.Views.Components.NewItem"
    Title="{Binding Title}"
>

    <StackLayout Margin="10, 0 " >
        <Entry Placeholder="Title" Text="{Binding TitleText, Mode=TwoWay}" />
        <Entry Placeholder="Description" Text="{Binding DescriptionText, Mode=TwoWay}" />

        <Button Text="SAVE ITEM"
                HorizontalOptions="CenterAndExpand"
                VerticalOptions="EndAndExpand"
                Clicked="SaveItemClicked" Command="SaveCommand"/>
    </StackLayout>

</ContentPage>
