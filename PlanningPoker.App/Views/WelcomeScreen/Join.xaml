<?xml version="1.0" encoding="utf-8"?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="PlanningPoker.App.Views.WelcomeScreen.Join"
    Title="Join"
    Padding="10,0,10,0"
>

    <StackLayout>
        <Label Text="Nickname"/>
        <Entry Text="{Binding Nickname}" HorizontalTextAlignment="Center" HorizontalOptions="FillAndExpand" Margin="5" />
        <Label Text="Session-key"/>
        <Entry Text="{Binding Key}" HorizontalTextAlignment="Center" HorizontalOptions="FillAndExpand" Margin="5" />
        <Button Text="Join"
                HorizontalOptions="CenterAndExpand"
                VerticalOptions="EndAndExpand"
                Clicked="HandleClicked"></Button>
    </StackLayout>

</ContentPage>
