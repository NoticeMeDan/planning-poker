<?xml version="1.0" encoding="utf-8"?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:components="clr-namespace:PlanningPoker.App.Views.Components;assembly=PlanningPoker.App"
    x:Class="PlanningPoker.App.Views.Session.ItemEstimation"
>

    <StackLayout>
        <StackLayout Orientation="Vertical" VerticalOptions="Start">
            <Label Text="Title"/>
            <Label Text="Description"/>
        </StackLayout>

        <StackLayout VerticalOptions="CenterAndExpand">

        </StackLayout>
        
        <Button Text="Estimate Item" Clicked="EstimateItem_Clicked" />

        <StackLayout Orientation="Horizontal" VerticalOptions="End">
            <components:Cards />
            <components:VotingNumbers x:Name="Votes"/>
        </StackLayout>
    </StackLayout>

</ContentPage>
